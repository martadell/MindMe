<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context="edu.upc.eseiaat.pma.mindme.mindme.EditFolderActivity">

    <Spinner
        android:id="@+id/llistacategories"
        android:layout_width="fill_parent"
        android:layout_height="?attr/listPreferredItemHeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lable_categoria"
        android:layout_marginTop="14dp"></Spinner>

    <TextView
        android:id="@+id/label_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:paddingBottom="4dp"
        android:text="@string/label_nom"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edit_nom"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/lable_categoria"
        android:layout_toEndOf="@+id/btn_afegircarpeta"
        android:layout_toRightOf="@+id/btn_afegircarpeta" />

    <TextView
        android:id="@+id/lable_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/label_nom"
        android:layout_marginTop="38dp"
        android:text="@string/label_categoria"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/btn_afegircarpeta"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/requadre"
        android:onClick="cancel"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/wrong" />

    <ImageButton
        android:id="@+id/btn_ok"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_afegircarpeta"
        android:background="@drawable/requadre"
        android:onClick="ok"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ok" />

</RelativeLayout>
